<mvc:View 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:l="sap.ui.layout" 
	xmlns:core="sap.ui.core" controllerName="i.main.Catalog" 
	xmlns="sap.m">
	<SplitApp id="Split" initialDetail="detail" initialMaster="master" orientationChange="onOrientationChange">
		<detailPages>
			<Page id="detail" title="Detail">
				<content>
					<l:VerticalLayout width="100%">
						<l:BlockLayout background="Dashboard">
							<l:BlockLayoutRow>
								<l:BlockLayoutCell>
									<TextArea id="TypeHere" rows="100" width="100%" valueLiveUpdate="true" liveChange="handleLiveChange" growing="true" wrapping="None"/>
								</l:BlockLayoutCell>
								<l:BlockLayoutCell>
									<core:HTML id="PreviewHere"/>
								</l:BlockLayoutCell>
							</l:BlockLayoutRow>
						</l:BlockLayout>
					</l:VerticalLayout>
				</content>
			</Page>
		</detailPages>
		<masterPages>
			<Page id="master" title="目录" icon="sap-icon://action" class="sapUiStdPage">
				<subHeader>
					<Toolbar>
						<ToolbarSpacer id="Spacer" />
						<Button icon="sap-icon://add-document" tooltip="写文字" press="newDocument"/>
						<Button icon="sap-icon://add-folder" tooltip="新建文件夹" press="newFolder"/>
					</Toolbar>
				</subHeader>
				<content>
					<Tree id="catalog" selectionChange="selectionChange" items="{/}">
						<StandardTreeItem title="{title}" icon="{icon}"/>
					</Tree>
				</content>
			</Page>
		</masterPages>
	</SplitApp>
</mvc:View>